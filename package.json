{
  "name": "github-pr-linter",
  "version": "1.2.0",
  "description": "Finder's GitHub commit linter, runs as a GitHub Action",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "compile": "tsc",
    "bundle": "ncc build",
    "build": "yarn run compile && yarn run bundle",
    "lint": "eslint ./src --ext ts --fix",
    "prebuild": "yarn run lint && yarn run test",
    "prepare": "husky install",
    "precommit": "yarn run build && git add dist"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/finderau/github-pr-linter.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/finderau/github-pr-linter/issues"
  },
  "homepage": "https://github.com/finderau/github-pr-linter#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3"
  }
}
